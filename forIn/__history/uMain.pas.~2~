unit uMain;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls;

type
  TFMain = class(TForm)
    btForInString: TButton;
    btSoNumeros: TButton;
    procedure btForInStringClick(Sender: TObject);
    procedure btSoNumerosClick(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  FMain: TFMain;

implementation

{$R *.dfm}

procedure TFMain.btForInStringClick(Sender: TObject);
var
  Texto,
  Letra: string;
begin
  Texto := 'Olá Mundo!';
  for Letra in Texto do
  begin
    ShowMessage(Letra);
  end;
end;

procedure TFMain.btSoNumerosClick(Sender: TObject);
var
 Numeros: array of string;

 Letra,
 Texto,
 SoNumeros: String;
begin
  SoNumeros := '';
  Texto := 'Ola 123 Mundo!';
  for Letra in Texto do
  begin
    if Letra in [0..9] then
      SoNumeros := SoNumeros + Letra;
  end;
  ShowMessage(SoNumeros);
end;

end.
